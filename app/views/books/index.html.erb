<h1>Books<h1>

	<table>
	<tr>
		<th>title</th>
		<th>body</th>
	</tr>
	</table>

	<!--取得・一覧のリストをここに出す-->
	<% @books.each do |book| %>
	<tbody>
	<tr>
		<th><%= book.title %></th>
		<th><%= book.body %></th>
	</tr>
	</tbody>
	<% end %>

<h2>New book<h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
    <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<%= f.submit 'Create Book' %>
<% end %>
