<h2>Books</h2>

	<table>
	<tr>
		<th>title</th>
		<th>body</th>
	</tr>

	<!--取得・一覧のリストをここに出す-->
	<% @books.each do |book| %>
	<tbody>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "show", book_path(book.id) %>
			<%= link_to "edit", edit_book_path(book.id) %>
			<%= link_to "destroy", book_path(book), method: :delete,"data-confirm" =>"Are you sure?" %>
		</td>
	</tr>
	</tbody>
	<% end %>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body, size: 30 %>


<br><%= f.submit 'Create Book' %></br>
<% end %>
